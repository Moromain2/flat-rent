<%= form_for @proprety do |f| %>

  <h3>Titre</h3>
  <div class="edit-title-container">
    <%= f.text_field :name %>
  </div>

  <h3>Description</h3>
  <div class="edit-description-container">
    <%= f.text_area :description %>
  </div>

  <h3>Images</h3>
  <div class="edit-images-container">
    <div class="edit-big-image">
      <%= f.file_field :image %>
      <% if @proprety.image.present? %>
        <%= image_tag(@proprety.image_url.to_s) %>
      <% end %>
    </div>
    <div class="edit-small-images">
      <div class="edit-small-image">
        <%= f.file_field :image2 %>
        <% if @proprety.image2.present? %>
          <%= image_tag(@proprety.image2_url.to_s) %>
        <% end %>
      </div>
      <div class="edit-small-image">
        <%= f.file_field :image3 %>
        <% if @proprety.image3.present? %>
          <%= image_tag(@proprety.image3_url.to_s) %>
        <% end %>
      </div>
      <div class="edit-small-image">
        <%= f.file_field :image4 %>
        <% if @proprety.image4.present? %>
          <%= image_tag(@proprety.image4_url.to_s) %>
        <% end %>
      </div>
      <div class="edit-small-image">
        <%= f.file_field :image5 %>
        <% if @proprety.image5.present? %>
          <%= image_tag(@proprety.image5_url.to_s) %>
        <% end %>
      </div>
      <div class="edit-small-image">
        <%= f.file_field :image6 %>
        <% if @proprety.image6.present? %>
          <%= image_tag(@proprety.image6_url.to_s) %>
        <% end %>
      </div>
      <div class="edit-small-image">
        <%= f.file_field :image7 %>
        <% if @proprety.image7.present? %>
          <%= image_tag(@proprety.image7_url.to_s) %>
        <% end %>
      </div>
    </div>
  </div>

  <%= f.label :people %>
  <%= f.number_field :people %>
  <br>

  <%= f.label :bedrooms %>
  <%= f.number_field :bedrooms %>
  <br>

  <%= f.label :bathrooms %>
  <%= f.number_field :bathrooms %>
  <br>

  <%= f.label :wifi %>
  <%= f.check_box :wifi %>
  <br>

  <%= f.label :parking %>
  <%= f.check_box :parking %>
  <br>

  <%= f.label :lift %>
  <%= f.check_box :lift %>
  <br>

  <%= f.label :kitchen %>
  <%= f.number_field :kitchen %>
  <br>

  <%= f.label :other %>
  <%= f.text_field :other %>
  <br>

  <%= f.label :price %>
  <%= f.number_field :price %>
  <br>

  <%= f.label :street %>
  <%= f.text_field :street %>
  <br>

  <%= f.label :number %>
  <%= f.number_field :number %>
  <br>

  <%= f.label :zipcode %>
  <%= f.number_field :zipcode %>
  <br>

  <%= f.label :city %>
  <%= f.text_field :city %>
  <br>

  <%= f.label :type_of_street %>
  <%= f.text_field :type_of_street %>
  <br>

  <%= f.submit 'Enregistrer' %>

<% end %>
